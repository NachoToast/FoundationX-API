{
    "name": "foundationx-api",
    "private": true,
    "main": "build/main.js",
    "license": "MIT",
    "type": "module",
    "author": {
        "name": "NachoToast",
        "url": "https://github.com/NachoToast"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/NachoToast/FoundationX-API.git"
    },
    "scripts": {
        "build": "tsc --project tsconfig.build.json",
        "start": "node build/main.js",
        "typecheck": "tsc --noEmit",
        "lint": "eslint src --max-warnings=0",
        "check:spec": "tsx scripts/checkDeadLinks.ts",
        "test": "vitest --run",
        "check-all": "pnpm typecheck && pnpm lint && pnpm check:spec && pnpm test",
        "coverage": "vitest run --coverage",
        "dev": "tsx --watch-path=src --watch-path=config.json --disable-warning=ExperimentalWarning src/main.ts"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dayjs": "^1.11.11",
        "discord.js": "^14.15.3",
        "express": "^4.19.2",
        "express-openapi-validator": "^5.2.0",
        "express-rate-limit": "^7.3.1",
        "mongodb": "^6.7.0",
        "swagger-ui-express": "^5.0.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.5.0",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/node": "^20.14.9",
        "@types/supertest": "^6.0.2",
        "@types/swagger-ui-express": "^4.1.6",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "@vitest/coverage-v8": "^1.6.0",
        "eslint": "^9.5.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.29.1",
        "nodemon": "^3.1.4",
        "prettier": "^3.3.2",
        "supertest": "^7.0.0",
        "ts-node": "^10.9.2",
        "tsx": "^4.15.7",
        "typescript": "^5.5.2",
        "typescript-eslint": "^7.14.1",
        "vitest": "^1.6.0"
    }
}
